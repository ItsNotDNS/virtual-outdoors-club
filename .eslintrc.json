{
    "extends": ["standard", "standard-react"],
    "rules": {
        "quotes": [2, "double"],
        "semi": [2, "always"],
        "space-before-function-paren": [2, "never"],
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "jsx-quotes": [2, "prefer-double"],
        "prefer-template": 2,
        "one-var": [2, "always"]
    },
    "globals": {
        "describe": false,
        "it": false
    }
}